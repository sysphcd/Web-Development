<%- include("partials/header") -%>
<h1>Compose</h1>

<form action="/compose" method="post">

  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" placeholder="Post Title">
    <label>Post Body</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30" placeholder="Post Content"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="publish">Publish</button>

</form>

</div>
<%- include("partials/footer") -%>
